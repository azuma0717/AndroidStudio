<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.yuki.intent_homework_1108.Profile_1109">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#b947fd1d"
        android:text="Profile" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_toStartOf="@+id/textView"
        android:text="Name" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:hint="yuki"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ed2"
        android:layout_alignBottom="@+id/ed2"
        android:layout_alignEnd="@+id/textView2"
        android:text="Phone"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ed1"
        android:layout_below="@+id/ed1"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="123456789"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_centerVertical="true"
        android:text="City"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ed2"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mexico" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/ed3"
        android:layout_marginTop="31dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="E-mail" />

    <EditText
        android:id="@+id/ed4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed3"
        android:layout_below="@+id/ed3"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="abc@example.com"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ed5"
        android:layout_alignBottom="@+id/ed5"
        android:layout_alignEnd="@+id/textView5"
        android:text="Favorite Song"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ed4"
        android:layout_below="@+id/ed4"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="What do you mean?" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/ed5"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="23dp"
        android:text="Submit" />


</RelativeLayout>
