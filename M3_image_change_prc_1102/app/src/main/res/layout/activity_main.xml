<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6ffa5f2"
    tools:context="com.yukigmail.m3_image_change_prc_1102.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Image changing"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#047918"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/yukitext" />

    <ImageView
        android:id="@+id/yukiimag"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/yukitext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/misao" />

    <Button
        android:id="@+id/yuki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yukiimag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="clicks"
        android:text="Change" />

    <TextView
        android:id="@+id/yukitext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/yukitext"
        android:layout_marginBottom="47dp"
        android:text="TextView" />

</RelativeLayout>
